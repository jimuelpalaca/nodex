{
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "..",
    "allowJs": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "exclude": ["tests", "public"]
}
